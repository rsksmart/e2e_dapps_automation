{
  "name": "e2e_dapps_automation",
  "version": "2.0.1",
  "description": "E2E Browser Automation for web3 dApps using Cucumber+Playwright+Synpress in JavaScript",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/rsksmart/e2e_dapps_automation"
  },
  "scripts": {
