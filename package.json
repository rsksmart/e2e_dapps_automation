  "devDependencies": {
    "@cucumber/cucumber": "^10.0.1",
    "@playwright/test": "1.44.0",
    "@synthetixio/synpress": "^4.0.0-alpha.9"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
